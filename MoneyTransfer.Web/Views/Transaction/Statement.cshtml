@model MoneyTransfer.Shared.DTOs.TransactionListDto
@{
    ViewData["Title"] = "Transaction Page";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 200px;">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
                <span class="fs-4">Sidebar</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Transaction")" class="nav-link active" aria-current="page">
                        Home
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("NewAccount", "Transaction")" class="nav-link text-white">
                        Create account
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Transfer", "Transaction")" class="nav-link text-white">
                        Transfer Money
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("TransactionList", "Transaction")" class="nav-link text-white">
                        Transaction List
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("UpdateProfile", "Transaction")" class="nav-link text-white">
                        Update Profile
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Logout", "Auth")" class="nav-link text-white">
                        Logout
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
            <h1 class="h2">Transaction Statement</h1>
            <div class="container">
                <div class="card shadow-lg p-4">
                    <div class="row">
                        <!-- Sender Details -->
                        <div class="col-md-6">
                            <h5 class="mb-3">Sender Details</h5>
                            <table class="table table-bordered">
                                <tr>
                                    <th>First Name</th>
                                    <td>@Model.SenderName</td>
                                </tr>
                                <tr>
                                    <th>Sender ID</th>
                                    <td>@Model.SenderId</td>
                                </tr>
                            </table>
                        </div>

                        <!-- Receiver Details -->
                        <div class="col-md-6">
                            <h5 class="mb-3">Receiver Details</h5>
                            <table class="table table-bordered">
                                <tr>
                                    <th>Receiver Name</th>
                                    <td>@Model.ReceiverName</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <!-- Payment Details -->
                    <h5 class="mb-3 mt-4">Payment Summary</h5>
                    <table class="table table-bordered">
                        <tr>
                            <th>Transfer Amount (MYR)</th>
                            <td>@Model.TransferAmount</td>
                        </tr>
                        <tr>
                            <th>Converted Amount (NPR)</th>
                            <td>@Model.ConvertedAmount</td>
                        </tr>
                        <tr>
                            <th>Transaction Type</th>
                            <td>@Model.TransactionType</td>
                        </tr>
                    </table>

                    <div class="text-center mt-4">
                        <a asp-action="TransactionList" class="btn btn-primary">Back to Transaction List</a>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
